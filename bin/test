#!/bin/bash

cd $(dirname $0)/..

INSTANCE_NAME=`hostname` \
    LOGPLEX_CONFIG_REDIS_URL="redis://localhost:6379" \
    LOGPLEX_SHARD_URLS="redis://localhost:6379" \
    LOGPLEX_REDGRID_REDIS_URL="redis://localhost:6379" \
    LOCAL_IP="127.0.0.1" \
    LOGPLEX_COOKIE=123 \
    ERL_LIBS=`pwd`/deps/ \
    ct_run -spec logplex.spec -pa ebin
