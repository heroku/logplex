#!/bin/sh

erl +K true +A100 +P500000 \
    +MBas aobf \
    +MBlmbcs 512 \
    -env ERL_MAX_PORTS 65535 \
    -config sys \
    -ehmon report_mf "${EHMON_REPORT_MF}" \
    -ehmon shh_connection "\"${SHH_LISTEN}\"" \
    -name logplex@`hostname --fqdn` \
    -pa ebin \
    -env ERL_LIBS deps \
    -noshell -noinput \
    -setcookie ${LOGPLEX_COOKIE} \
    -s logplex_app
